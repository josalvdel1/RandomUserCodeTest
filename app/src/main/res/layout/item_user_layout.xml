<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_user_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/content_default_padding">

    <ImageView
        android:id="@+id/iv_user_thumbnail"
        android:layout_width="@dimen/user_thumbnail_size"
        android:layout_height="@dimen/user_thumbnail_size"
        android:background="?selectableItemBackground" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_default_padding"
        android:layout_marginStart="@dimen/content_default_padding"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_user_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Item title" />

        <TextView
            android:id="@+id/tv_user_list_subtitle_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Item subtitle 1" />

        <TextView
            android:id="@+id/tv_user_list_subtitle_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Item subtitle 2" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_user_delete_forever"
        android:layout_width="@dimen/action_icon_size"
        android:layout_height="@dimen/action_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/content_default_padding"
        android:layout_marginStart="@dimen/content_default_padding"
        android:background="?selectableItemBackground"
        android:padding="@dimen/action_icon_padding"
        app:srcCompat="@drawable/ic_delete_forever" />
</LinearLayout>